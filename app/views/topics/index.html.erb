<h1>Topics</h1>

<div class="row">
  <div class="col-md-8">
    <% @topics.each do |topic| %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            <%= link_to topic.name, topic %>
          </h4>
          <small>
            <%= topic.description %>
          </small>
        </div>
      </div>
    <% end %>
    <% ((@topics_count / 10) + 1).times do |index| %>
      <% if index + 1 == @page %>
        <%= link_to "<#{index + 1}>", topics_path(page: index + 1) %>
      <% else %>
        <%= link_to (index + 1).to_s, topics_path(page: index + 1) %>
      <% end %>
    <% end %>
  </div>
  <div class="col-md-4">
    <% if policy(Topic.new).create? %>
      <%= link_to "New Topic", new_topic_path, class: 'btn btn-success' %>
    <% end %>
  </div>
</div>